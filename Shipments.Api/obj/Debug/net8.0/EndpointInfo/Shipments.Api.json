        "type": "object",
        "properties": {
          "recipientName": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "recipientAddress": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "recipientCity": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "recipientPostalCode": {
            "maxLength": 20,
            "minLength": 1,
            "type": "string"
          },
          "recipientPhone": {
            "maxLength": 50,
