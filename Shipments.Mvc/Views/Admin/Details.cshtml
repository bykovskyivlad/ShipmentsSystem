@model ShipmentDetailsDto
@using Shipments.Shared.Domain.Enums
@using Shipments.Shared.Domain.Rules

<link rel="stylesheet" href="~/css/shipments.css" />

<div class="shipments-page">
    <div class="shipments-card" style="max-width: 900px;">

       
        <div class="mb-4">
            <h2 class="shipments-title">
                Shipment #@Model.Id
            </h2>
            <p class="text-muted mb-0">
                Current status:
                <strong>@Model.Status</strong>
            </p>
        </div>

       
        <div class="mb-4">
            <p><strong>Recipient:</strong> @Model.RecipientName</p>
            <p><strong>City:</strong> @Model.RecipientCity</p>
            <p><strong>Address:</strong> @Model.RecipientAddress</p>
            <p><strong>Postal code:</strong> @Model.RecipientPostalCode</p>
            <p><strong>Phone:</strong> @Model.RecipientPhone</p>
            <p><strong>Created:</strong> @Model.CreatedAt</p>
        </div>

        <hr />

        
        <div class="mb-4">
            <h4>Courier</h4>

            @if (string.IsNullOrEmpty(Model.CourierId))
            {
                <p class="text-muted"><em>No courier assigned</em></p>
            }
            else
            {
                <p><strong>Courier ID:</strong> @Model.CourierId</p>
            }

            @if (Model.Status != ShipmentStatus.Delivered &&
                        Model.Status != ShipmentStatus.Canceled)
            {
                <a asp-action="Couriers"
                   asp-route-shipmentId="@Model.Id"
                   class="details-link">
                    Assign / change courier
                </a>
            }
            else
            {
                <p class="text-muted">
                    <em>Courier cannot be changed for delivered or canceled shipment.</em>
                </p>
            }
        </div>

        <hr />

        
        <div class="mb-4">
            <h4>Change shipment status</h4>

            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="shipmentId" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label">New status</label>

                    @{
                        var allowed = ShipmentStatusTransitions.GetAllowedTransitions(Model.Status);
                    }

                    @if (allowed.Any())
                    {
                        <select name="newStatus" class="form-select">
                            @foreach (var status in allowed)
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    }
                    else
                    {
                        <select class="form-select" disabled>
                            <option>Final status</option>
                        </select>
                        <div class="form-text text-muted">
                            Shipment is in final state – no further changes possible.
                        </div>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label">Notes</label>
                    <textarea name="notes"
                              rows="3"
                              class="form-control"></textarea>
                </div>

                <button type="submit"
                        class="btn btn-primary"
                        @(allowed.Any() ? "" : "disabled")>
                    Update status
                </button>
            </form>
        </div>

        <hr />

        
        <div>
            <h4 class="mb-3">Event history</h4>

            @if (Model.Events.Any())
            {
                <ul class="list-group list-group-flush shipment-history">
                    @foreach (var ev in Model.Events)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                @if (ev.OldStatus.HasValue && ev.NewStatus.HasValue)
                                {
                                    <span>
                                        @ev.OldStatus → <strong>@ev.NewStatus</strong>
                                    </span>
                                }
                                else
                                {
                                    <span><strong>Event</strong></span>
                                }

                                <div class="text-muted small">
                                    By: @ev.PerformedByRole (@ev.PerformedByUserId)
                                </div>

                                @if (!string.IsNullOrEmpty(ev.Notes))
                                {
                                    <div class="small">
                                        <em>Notes:</em> @ev.Notes
                                    </div>
                                }
                            </div>

                            <span class="text-muted small">
                                @ev.OccurredAtUtc
                            </span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted"><em>No events yet</em></p>
            }
        </div>

        <div class="mt-4">
            <a asp-action="Index" class="details-link">
                ← Back to admin list
            </a>
        </div>

    </div>
</div>
