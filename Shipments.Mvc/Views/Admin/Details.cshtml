@model ShipmentDetailsDto
@using Shipments.Shared.Domain.Enums

<h2>Shipment details – ID @Model.Id</h2>

<hr />

<h3>Basic information</h3>
<ul>
    <li><strong>Status:</strong> @Model.Status</li>
    <li><strong>Recipient:</strong> @Model.RecipientName</li>
    <li><strong>City:</strong> @Model.RecipientCity</li>
    <li><strong>Address:</strong> @Model.RecipientAddress</li>
    <li><strong>Postal code:</strong> @Model.RecipientPostalCode</li>
    <li><strong>Phone:</strong> @Model.RecipientPhone</li>
    <li><strong>Created:</strong> @Model.CreatedAt</li>
</ul>

<hr />

<h3>Courier</h3>

@if (string.IsNullOrEmpty(Model.CourierId))
{
    <p><em>No courier assigned</em></p>
}
else
{
    <p>
        <strong>Courier ID:</strong> @Model.CourierId
    </p>
}

<a asp-action="Couriers"
   asp-route-shipmentId="@Model.Id">
    Assign / change courier
</a>

<hr />

<h3>Change shipment status</h3>

<form asp-action="UpdateStatus" method="post">
    <input type="hidden" name="shipmentId" value="@Model.Id" />

    <div>
        <label>Status</label><br />
        <select name="newStatus">
            @foreach (ShipmentStatus status in Enum.GetValues(typeof(ShipmentStatus)))
            {
                <option value="@status"
                        selected="@(status == Model.Status)">
                    @status
                </option>
            }
        </select>
    </div>

    <div>
        <label>Notes</label><br />
        <textarea name="notes"
                  rows="3"
                  cols="40"></textarea>
    </div>

    <br />
    <button type="submit">Update status</button>
</form>

<hr />

<h3>Event history</h3>

@if (Model.Events.Any())
{
    <ul>
        @foreach (var ev in Model.Events)
        {
            <li>
                <strong>@ev.OccurredAtUtc:</strong>

                @if (ev.OldStatus.HasValue && ev.NewStatus.HasValue)
                {
                    <span>
                        Status changed from
                        <strong>@ev.OldStatus</strong>
                        to
                        <strong>@ev.NewStatus</strong>
                    </span>
                }
                else
                {
                    <span>Event</span>
                }

                <br />
                <small>
                    By: @ev.PerformedByRole (@ev.PerformedByUserId)
                </small>

                @if (!string.IsNullOrEmpty(ev.Notes))
                {
                    <div>
                        <em>Notes:</em> @ev.Notes
                    </div>
                }
            </li>
        }
    </ul>
}
else
{
    <p><em>No events yet</em></p>
}


<hr />

<a asp-action="Index">⬅ Back to admin list</a>
