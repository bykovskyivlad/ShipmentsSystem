<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shipments.Mvc</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shipments.Mvc.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- BRAND -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    Shipments.Mvc
                </a>

                <!-- TOGGLER -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Privacy">
                                Privacy
                            </a>
                        </li>

                        @* CLIENT *@
                        @if (User.IsInRole("Client"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Shipments"
                                   asp-action="Index">
                                    My shipments
                                </a>
                            </li>
                        }

                        @* COURIER *@
                        @if (User.IsInRole("Courier"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Courier"
                                   asp-action="Index">
                                    Courier panel
                                </a>
                            </li>
                        }

                        @* ADMIN *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Admin"
                                   asp-action="Index">
                                    Admin panel
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT MENU -->
                    <ul class="navbar-nav mb-2 mb-sm-0">

                        @if (!User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Auth"
                                   asp-action="Login">
                                    Login
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link text-muted">
                                    Hello @User.Identity.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Auth"
                                   asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Shipments.Mvc -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>