@model CreateShipmentRequest

<h2>Create shipment</h2>

<form method="post">
    <div>
        <label>Recipient name</label>
        <input asp-for="RecipientName" />
    </div>

    <div>
        <label>Address</label>
        <input asp-for="RecipientAddress" />
    </div>

    <div>
        <label>City</label>
        <input asp-for="RecipientCity" />
    </div>

    <div>
        <label>Postal code</label>
        <input asp-for="RecipientPostalCode" />
    </div>

    <div>
        <label>Phone</label>
        <input asp-for="RecipientPhone" />
    </div>

    <div>
        <label>Notes</label>
        <textarea asp-for="Notes"></textarea>
    </div>

    <button type="submit">Create</button>
</form>