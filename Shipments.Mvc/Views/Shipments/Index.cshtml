@model List<ShipmentListItemDto>

<link rel="stylesheet" href="~/css/shipments.css" />

<div class="shipments-page">
    <div class="shipments-card">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="shipments-title">My shipments</h2>

            <a asp-action="Create"
               class="btn new-shipment-btn">
                + New shipment
            </a>
        </div>

        <div class="table-responsive">
            <table class="table shipments-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Status</th>
                        <th>City</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Id</td>
                            <td>@s.Status</td>
                            <td>@s.RecipientCity</td>
                            <td class="text-end">
                                <a asp-action="Details"
                                   asp-route-id="@s.Id"
                                   class="details-link">
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>